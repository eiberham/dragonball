{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "airbnb-base", "prettier", "plugin:jsdoc/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "plugins": ["prettier", "jsdoc"],
    "rules": {
        "prettier/prettier": ["error"],
        "jsdoc/require-jsdoc": [
            1,
            { "contexts": ["ClassDeclaration", "ClassProperty", "FunctionDeclaration"
                ]
            }
        ]
    }
}